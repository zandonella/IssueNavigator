{
    "name": "Issue Navigator",
    "description": "A Chrome extension for navigating GitHub issues",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs"
    ],
    "manifest_version": 3,
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "host_permissions": [
        "https://github.com/*",
        "https://api.github.com/*"
    ],
    "action": {
        "default_popup": "src/index.html"
    },
    "content_scripts": [
        {
            "js": [
                "src/navigator.js"
            ],
            "matches": [
                "https://github.com/*"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/settings.js"
            ],
            "matches": [
                "https://github.com/*"
            ]
        }
    ]
}